size(width = 30, height = 30)
    width width px
    height height px

.icons
    text-align center
    a
        display inline-block
        padding 15px
        margin 2px
        border-radius 50%
        border 2px solid sec
        line-height 0
        transition all .7s
        .icon
            fill sec
            size(20,20)
            +above(cut)
                size()
        &:hover
            background sec
            .icon
                fill main

.down
    position absolute
    bottom 20px
    display block
    text-align center
    .icon
        size(80,80)
        fill sec
