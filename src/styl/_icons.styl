size(width = 30, height = 30)
    width width px
    height height px

.icons-home
    text-align center
    a
        display inline-block
        padding 15px
        margin 2px
        border-radius 50%
        border 2px solid sec
        line-height 0
        transition all .7s
        .icon
            fill sec
            size(18,18)
            +above(cut)
                size()
        &:hover
            background sec
            .icon
                fill main

.icon-back
    fill sec
    size(25,32)
    +above(cut)
        size(25,40)

.down
    position absolute
    bottom 40px
    width 100%
    display block
    text-align center
    .icon
        align(both)
        size(80,80)
        fill sec
        animation pulse 1.3s infinite