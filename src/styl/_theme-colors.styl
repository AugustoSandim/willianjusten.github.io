themes = {
    post-jekyll: #D75A58,
    post-css: #0562DC,
    post-js: yellow,
    post-html: red,
    post-dev: gray
}

for theme, category-color in themes
    .{theme}
        .post-content
            h1,h2,h3,h4
                color category-color
            a
                color category-color
                border-bottom 2px dashed category-color
                &:hover
                    background category-color
                    color #fff
            p,
            li
                code
                    color category-color

        .header-post,
        .header-site
            background category-color
            h1
                text-shadow 3px 3px darken(category-color, 20%)

        .author .email
            color category-color

        .share a
            &:hover svg
                fill category-color

        footer
            background category-color
